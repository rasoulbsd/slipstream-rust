version: '3.8'

services:
  server:
    command: ["/app/slipstream-server", "--dns-listen-port", "53", "--target-address", "echo:5201", "--domain", "slipstream.example.com", "--cert", "/app/certs/cert.pem", "--key", "/app/certs/key.pem"]
    environment:
      - DOMAIN=slipstream.example.com

  client:
    command: ["/app/slipstream-client", "--tcp-listen-port", "7000", "--resolver", "1.1.1.1:53", "--domain", "slipstream.example.com"]
    environment:
      - DOMAIN=slipstream.example.com
      - RESOLVER=1.1.1.1:53
